<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_find_id_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/common_bg_color1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line312"></LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/account_accountmanage_confirm_textview_marginTop"
                android:layout_marginBottom="@dimen/account_accountmanage_confirm_textview_marginBottom"
                android:layout_marginLeft="@dimen/account_accountmanage_confirm_textview_marginLeft"
                android:text="@string/find_id_confirm_textview_text"
                android:textStyle="normal"
                android:textColor="@color/account_accountmanage_confirm_textview_textColor"
                android:textSize="@dimen/account_accountmanage_confirm_textview_textSize"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/account_accountmanage_password_input_height"
                android:layout_marginLeft="@dimen/account_accountmanage_password_input_marginLeft"
                android:layout_marginRight="@dimen/account_accountmanage_password_input_marginRight"
                android:background="@drawable/unfocused_edit">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/account_accountmanage_password_input_height"
                    android:layout_marginLeft="@dimen/account_accountmanage_confirm_textview_marginLeft"
                    android:background="@color/alpha_background"
                    android:hint="@string/find_id_nick_input_hint"
                    android:textColorHint="@color/account_accountmanage_password_input_hint_color"
                    android:textSize="@dimen/account_accountmanage_password_input_textSize"
                    android:textStyle="normal"
                    android:textColor="@color/account_accountmanage_password_input_textColor"
                    android:id="@+id/nick_input"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
